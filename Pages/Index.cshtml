@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">

    <table>
        <tr>
            <td>氏名</td><td>@Html.EditorFor(m=>m.FormValue.Person.Name)</td><td><span class="text-danger" asp-validation-for="FormValue.Person.Name"></span></td>
        </tr>
        <tr>
            <td>生年月日</td><td><input type="date" asp-for="FormValue.Person.Birthday"/></td><td><span class="text-danger" asp-validation-for="FormValue.Person.Birthday"></span></td>
        </tr>
        <tr>
            <td>メールアドレス</td><td>@Html.EditorFor(m=>m.FormValue.Person.MailAddress)</td><td><span class="text-danger" asp-validation-for="FormValue.Person.MailAddress"></span></td>
        </tr>
    </table>
    <br>
    <button class="btn btn-primary">送信</button>
    <br/>
    <pre class="text-danger">@Model.FormValue.Message</pre>

</form>